<%- include('partials/head') %>
</head>
<body class="bg-gray-50 min-h-screen font-sans">
<%- include('partials/nav') %>
  <!-- Top header bar -->

  <!-- Main content with padding to avoid overlap with fixed nav -->
  <main class="pt-20 px-6 flex flex-col items-center">

    <header class="mb-8">
      <h2 class="text-red-700 text-5xl font-bold drop-shadow-md">Here are our Registered homes:</h2>
    </header>

    <ul class="w-full max-w-xl space-y-6">
      <% registeredhomes.forEach(home => { %>
        <li class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-2xl transition-shadow duration-300 cursor-default select-none flex flex-col md:flex-row">
          <div class="flex-shrink-0 md:w-48 h-48 md:h-auto overflow-hidden">
            <img src="<%= home.photoUrl %>" alt="<%= home.housename %>" class="w-full h-full object-cover" />
          </div>
          <div class="p-6 flex flex-col justify-between">
            <div>
              <h3 class="text-2xl font-extrabold text-red-700 mb-2"><%= home.housename %></h3>
              <p class="text-gray-700 text-lg mb-1">Price: <span class="font-semibold text-green-600">$<%= home.price %></span></p>
              <p class="text-gray-600 mb-1">Location: <span class="font-medium"><%= home.location %></span></p>
              <p class="text-yellow-500 mb-1 flex items-center">
                Rating:
                <span class="ml-2 text-xl font-bold"><%= home.rating %> â˜…</span>
              </p>
            </div>
          </div>
        </li>
      <% }) %>
    </ul>
    
  </main>

</body>
</html>
