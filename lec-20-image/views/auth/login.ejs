<%- include('../partials/head')%>
</head>
<body class="bg-gradient-to-br from-pink-200 via-white to-blue-100 min-h-screen font-sans relative overflow-x-hidden">

  <!-- Decorative Blobs -->
  <div class="absolute top-0 left-0 w-72 h-72 bg-pink-300 opacity-30 rounded-full blur-3xl -z-10 animate-pulse"></div>
  <div class="absolute bottom-0 right-0 w-96 h-96 bg-blue-300 opacity-30 rounded-full blur-3xl -z-10 animate-pulse"></div>
  <div class="absolute top-1/2 left-1/2 w-40 h-40 bg-red-200 opacity-20 rounded-full blur-2xl -z-10 animate-pulse"></div>

  <!-- Top header bar -->
  <%- include('../partials/nav') %>

  <!-- Main content with padding to avoid overlap with fixed nav -->
  <main class="pt-28 px-6 flex flex-col items-center min-h-screen">

    <header class="mb-10">
      <h1 class="text-transparent bg-clip-text bg-gradient-to-r from-red-600 via-pink-500 to-blue-600 text-5xl md:text-6xl font-extrabold text-center drop-shadow-xl tracking-tight">
        Login to Your Account
      </h1>
      <p class="text-gray-700 mt-4 text-center text-lg font-medium">
        Welcome back! Please enter your credentials to continue.
      </p>
    </header>
   <%- include('../partials/errors') %>

    <form action="/login/" method="POST"
          class="w-full max-w-md bg-white/80 backdrop-blur-xl rounded-3xl shadow-2xl p-10 space-y-7 border border-gray-100 ring-2 ring-pink-200/40">
      <!-- Username/Email -->
      <div>
        <label for="email" class="block text-gray-700 font-semibold mb-1">Email or Username <span class="text-red-500">*</span></label>
        <input type="email" id="email" name="email"
               placeholder="Enter your Email"
               value="<%= oldInput.email ? oldInput.email : '' %>"
               class="w-full border-2 border-pink-200 rounded-xl p-3 focus:outline-none focus:ring-4 focus:ring-pink-300 transition shadow-sm"
               required />
      </div>
      <!-- Password -->
      <div>
        <label for="password" class="block text-gray-700 font-semibold mb-1">Password <span class="text-red-500">*</span></label>
        <input type="password" id="password" name="password"
               placeholder="Enter your password"
               class="w-full border-2 border-pink-200 rounded-xl p-3 focus:outline-none focus:ring-4 focus:ring-pink-300 transition shadow-sm"
               required />
      </div>
      <!-- Submit Button -->
      <button type="submit"
              class="w-full bg-gradient-to-r from-pink-500 via-red-500 to-blue-500 hover:from-pink-600 hover:to-blue-600 text-white font-bold py-3 rounded-xl shadow-xl transition-all duration-300 text-lg tracking-wide flex items-center justify-center gap-2">
        <svg class="w-5 h-5 animate-bounce" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M12 4v16m8-8H4"></path></svg>
        Sign In
      </button>
      <p class="text-center text-gray-600 text-sm mt-2">
        Don't have an account?
        <a href="/Signup" class="text-pink-600 hover:underline font-semibold">Register here</a>
      </p>
    </form>

  </main>
</body>
</html>