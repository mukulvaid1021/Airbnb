<%- include('../partials/head') %>
</head>

<body class="bg-gradient-to-br from-pink-200 via-white to-blue-100 min-h-screen font-sans relative overflow-x-hidden">
    <!-- Decorative Blobs -->
    <div class="absolute top-0 left-0 w-72 h-72 bg-pink-300 opacity-30 rounded-full blur-3xl -z-10 animate-pulse"></div>
    <div class="absolute bottom-0 right-0 w-96 h-96 bg-blue-300 opacity-30 rounded-full blur-3xl -z-10 animate-pulse"></div>
    <div class="absolute top-1/2 left-1/2 w-40 h-40 bg-red-200 opacity-20 rounded-full blur-2xl -z-10 animate-pulse"></div>

    <!-- Top header bar -->
    <%- include('../partials/errors') %>

    <!-- Main content -->
    <main class="pt-24 px-4 flex flex-col items-center min-h-screen">
        <header class="mb-10">
            <h1 class="text-transparent bg-clip-text bg-gradient-to-r from-red-600 via-pink-500 to-blue-600 text-5xl md:text-6xl font-extrabold text-center drop-shadow-xl tracking-tight">
                Create Your Account
            </h1>
            <p class="text-gray-700 mt-4 text-center text-lg font-medium">
                Join us and unlock <span class="text-red-500 font-bold">exclusive features</span>!
            </p>
        </header>

        <!-- Registration Form -->
        <form 
            action="/Signup" 
            method="POST" 
            class="w-full max-w-lg bg-white/80 backdrop-blur-xl rounded-3xl shadow-2xl p-12 space-y-8 border border-gray-100 ring-2 ring-pink-200/40"
        >
            <!-- Personal Information -->
            <div class="space-y-6">
               
                <!-- First Name -->
                <div>
                    <label for="firstname" class="block text-gray-700 font-semibold mb-1">First Name <span class="text-red-500">*</span></label>
                    <input 
                        id="firstname"
                        type="text" 
                        name="firstname"
                        placeholder="Enter your first name"
                        value="<%= oldInput.firstname ? oldInput.firstname : '' %>"
                        class="w-full border-2 border-pink-200 rounded-xl p-3 focus:outline-none focus:ring-4 focus:ring-pink-300 transition shadow-sm"
                        required 
                    />
                </div>

                <!-- Last Name -->
                <div>
                    <label for="lastname" class="block text-gray-700 font-semibold mb-1">Last Name</label>
                    <input 
                        id="lastname"
                        type="text" 
                        name="lastname"
                        placeholder="Enter your last name"
                        value="<%= oldInput.lastname ? oldInput.lastname : '' %>"
                        class="w-full border-2 border-pink-200 rounded-xl p-3 focus:outline-none focus:ring-4 focus:ring-pink-300 transition shadow-sm"
                    />
                </div>

                <!-- Email -->
                <div>
                    <label for="email" class="block text-gray-700 font-semibold mb-1">Email <span class="text-red-500">*</span></label>
                    <input 
                        id="email"
                        type="email" 
                        name="email"
                        placeholder="you@example.com"
                        value="<%= oldInput.email ? oldInput.email : '' %>"
                        class="w-full border-2 border-pink-200 rounded-xl p-3 focus:outline-none focus:ring-4 focus:ring-pink-300 transition shadow-sm"
                        required 
                    />
                </div>

                <!-- Password -->
                <div>
                    <label for="password" class="block text-gray-700 font-semibold mb-1">Password <span class="text-red-500">*</span></label>
                    <input 
                        id="password"
                        type="password" 
                        name="password"
                        placeholder="Create a password"
                        class="w-full border-2 border-pink-200 rounded-xl p-3 focus:outline-none focus:ring-4 focus:ring-pink-300 transition shadow-sm"
                        required 
                    />
                </div>

                <!-- Confirm Password -->
                <div>
                    <label for="passwords" class="block text-gray-700 font-semibold mb-1">Confirm Password <span class="text-red-500">*</span></label>
                    <input 
                        id="confirmPassword"
                        type="password" 
                        name="confirmPassword"
                        placeholder="Re-enter your password"
                        class="w-full border-2 border-pink-200 rounded-xl p-3 focus:outline-none focus:ring-4 focus:ring-pink-300 transition shadow-sm"
                        required 
                    />
                </div>
            </div>

            <!-- User Type Selection -->
            <div>
                <p class="font-semibold text-gray-700 mb-2">User Type</p>
                <div class="flex space-x-8">
                    <label class="flex items-center space-x-2 cursor-pointer">
                        <input 
                            type="radio" 
                            name="usertype" 
                            value="guest" 
                            checked 
                            class="accent-pink-500 scale-125 transition"  checked="<% oldInput.usertype === "guest"%>"
                        />
                        <span class="text-gray-700 font-medium">Guest</span>
                    </label>
                    <label class="flex items-center space-x-2 cursor-pointer">
                        <input 
                            type="radio" 
                            name="usertype" 
                            value="host" 
                            class="accent-blue-500 scale-125 transition" checked="<% oldInput.usertype === "host"%>"
                        />
                        <span class="text-gray-700 font-medium">Host</span>
                    </label>
                </div>
            </div>

            <!-- Terms and Conditions -->
            <div class="flex items-center space-x-2">
                <input 
                    type="checkbox" 
                    name="terms" 
                    id="terms" 
                    required 
                    class="accent-pink-600 scale-125 cursor-pointer"
                />
                <label for="terms" class="text-gray-700 cursor-pointer">
                    I agree to the <a href="#" class="underline text-pink-600 hover:text-pink-800">terms and conditions</a>
                </label>
            </div>

            <!-- Submit Button -->
            <button 
                type="submit" 
                class="w-full bg-gradient-to-r from-pink-500 via-red-500 to-blue-500 hover:from-pink-600 hover:to-blue-600 text-white font-bold py-3 rounded-xl shadow-xl transition-all duration-300 text-lg tracking-wide transform hover:scale-105"
            >
                <span class="inline-flex items-center gap-2">
                    <svg class="w-5 h-5 animate-bounce" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M12 4v16m8-8H4"></path></svg>
                    Register
                </span>
            </button>
            <p class="text-center text-gray-600 text-sm mt-2">
                Already have an account? 
                <a href="/login" class="text-pink-600 hover:underline font-semibold">Login here</a>
            </p>
        </form>
    </main>
</body>
</html>